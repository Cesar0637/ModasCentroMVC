@model IEnumerable<ModasCentroMVC.Usuarios>

@{
    ViewBag.Title = "Index";
}

<h2 class="my-4 text-center text-neon">Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary neon-button mb-3">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped neon-table">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre_Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Contraseña)</th>
                <th>@Html.DisplayNameFor(model => model.disponibilidad)</th>
                <th>@Html.DisplayNameFor(model => model.Roles.Nombre)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre_Usuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contraseña)</td>
                    <td>@Html.DisplayFor(modelItem => item.disponibilidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Roles.Nombre)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID_Usuario })" class="btn btn-sm neon-button-warning">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID_Usuario })" class="btn btn-sm neon-button-info">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID_Usuario })" class="btn btn-sm neon-button-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
